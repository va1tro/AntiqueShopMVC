@{
    ViewBag.Title = "Вход";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Вход</title>
    <style>
        body {
            background: #EEE0CB;
            font-family: Arial;
        }

        .login-box {
            width: 400px;
            margin: 100px auto;
            padding: 30px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        }

            .login-box input {
                width: 100%;
                padding: 10px;
                margin-top: 10px;
                border: 1px solid #ccc;
            }

            .login-box button {
                margin-top: 20px;
                padding: 10px 20px;
                background: #8B5E3C;
                border: 2px solid #8B5E3C;
                color: white;
                border: none;
                border-radius: 10px;
                cursor: pointer;
            }

        .register-button {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background: white;
            color: #8B5E3C;
            border: 2px solid #8B5E3C;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 500;
        }

            .register-button:hover {
                background: #f0e6db;
            }

        .error {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Авторизация</h2>
        <form method="post">
            <input type="text" name="login" placeholder="Логин" required />
            <input type="password" name="password" placeholder="Пароль" required />
            <button type="submit" style="margin-right: 10px;">Войти</button>
            <a href="/Account/Register" class="register-button">Регистрация</a>
            <div class="error">@ViewBag.Error</div>
        </form>
    </div>
</body>
</html>
